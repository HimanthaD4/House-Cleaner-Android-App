<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".SignupActivity">

    <!-- App Name or Logo -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="212dp"
        android:layout_height="194dp"
        app:srcCompat="@drawable/register" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <!-- Full Name Input -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3FFFFFF" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3FFFFFF" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3FFFFFF" />

    <!-- User Type Selection Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnOwner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_selector_owner"
            android:text="House Owner"
            android:textColor="@color/white"
            android:stateListAnimator="@null"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onUserTypeButtonClick" />

        <Button
            android:id="@+id/btnCleaner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_cleaner"
            android:text="Cleaner"
            android:textColor="@color/white"
            android:stateListAnimator="@null"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onUserTypeButtonClick" />
    </LinearLayout>

    <!-- Sign Up Button -->

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_signup"
        android:drawablePadding="8dp"
        android:drawableTint="@color/orange_yellow_dark"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/orange_yellow_dark" />

</LinearLayout>