<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- House Image -->
        <ImageView
            android:id="@+id/ivHouseImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="House Image"
            android:background="@color/light_gray"
            android:layout_marginEnd="12dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@id/ivHouseImage"
            android:layout_alignTop="@id/ivHouseImage" />

        <!-- Status -->
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="12sp"
            android:textColor="@color/orange_yellow"
            android:layout_below="@id/location"
            android:layout_toEndOf="@id/ivHouseImage"
            android:layout_marginTop="4dp" />

        <!-- Rooms and Bathrooms -->
        <TextView
            android:id="@+id/tvRoomsBathrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rooms: 3, Bathrooms: 2"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/status"
            android:layout_toEndOf="@id/ivHouseImage"
            android:layout_marginTop="4dp" />

        <!-- Floor Type -->
        <TextView
            android:id="@+id/tvFloorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Floor Type: Tile"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tvRoomsBathrooms"
            android:layout_toEndOf="@id/ivHouseImage"
            android:layout_marginTop="4dp" />

        <!-- Contact -->
        <TextView
            android:id="@+id/tvContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: 1234567890"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tvFloorType"
            android:layout_toEndOf="@id/ivHouseImage"
            android:layout_marginTop="4dp" />

        <!-- Delete Button (Icon) -->
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#712323"
            android:contentDescription="Delete"
            android:padding="4dp"
            android:src="@drawable/ic_delete"
            android:tint="@color/orange_yellow_dark" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>