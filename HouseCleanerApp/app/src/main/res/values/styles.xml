<!-- res/values/styles.xml -->
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Add these for Material Components -->
        <item name="materialCardViewStyle">@style/CardStyle</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
    </style>

    <style name="CardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/primaryLight</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primaryText</item>
    </style>
    <style name="RoundedTextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>




</resources>