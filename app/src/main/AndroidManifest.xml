<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.housecleaner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"> <!-- Apply the theme here -->

        <!-- Main Launcher Activity -->
        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".SignupActivity"
            android:exported="false"/>

        <activity android:name=".OwnerDashboardActivity"
            android:exported="false"/>
        <activity android:name=".CleanerDashboardActivity"
            android:exported="false"/>
        <activity android:name=".ProfileActivity"
            android:exported="false"/>
        <activity android:name=".HouseDetailActivity" />
    </application>
</manifest>